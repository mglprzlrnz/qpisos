<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/listings" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" name="price" class="form-control" value="<%= listing.title %>">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" class="form-control" value="<%= listing.description %>"></textarea>
        </div>
        <div class="form-group dropdown">
          <label for="home_type">Home Type</label><br>
          <select class="selectpicker" name='home_type' value="<%= listing.home_type %>">
            <option type="text" class="form-control" disabled selected>Select a type</option>
            <% home_type.forEach((category, i) => { %>
              <option type="text" class="form-control" value="<%= category %>"><%= category %></option>
            <%  }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="size">Size</label>
          <input type="number" name="size" class="form-control" value="<%= listing.size %>">
        </div>
        <div class="form-group">
          <label for="bedrooms">Bedrooms</label>
          <input type="number" name="bedrooms" class="form-control" value="<%= listing.bedrooms %>">
        </div>
        <div class="form-group">
          <label for="bathrooms">Bathrooms</label>
          <input type="number" name="bathrooms" class="form-control" value="<%= listing.bathrooms %>">
        </div>
        <div class="form-group">
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
