<div class="container Listing-container">

    <div class="row">
        <div class="col-sm-2">
            <!-- <img src="/Users/mac/Documents/Ironhack/Modulo 2/code /qpisos/public/images/listings/123/castellana-Calle-Ferrocarril-185594497_1.jpg?w=80&h=80&fit=crop&v=1466566705&auto=format&q=92&s=eff05acf65569368cc99f6363722fe60"><br>            By: <strong><%= Listing._creator.username %></strong> -->
        </div>
        <div class="col-sm-10">
            <h1>
                <%= Listing.title %>
            </h1>
            <h2 class="Listing-category">
                <%= Listing.category %>
            </h2>
            <p class="Listing-description">
                <%= Listing.description %>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <img class="Listing-image" src="<%= Listing.image %>">
        </div>
        <div class="col-sm-4 Listing-info">
            <div class="Listing-progress">
                <progress value="<%= Listing.totalPledged %>" max="<%= Listing.goal %>"></progress>
            </div>
            <div class="Listing-pledged">
                <span class="Listing-total">$<%= Listing.totalPledged %></span><br>
                <span class="light-text">
          pledged of
          $<%= Listing.goal %></span> goal
                </span>
            </div>
            <div class="Listing-backers">
                <strong class="large-strong"><%= Listing.backerCount %></strong><br>
                <span class="light-text">backers</span>
            </div>
            <div class="Listing-time">
                <strong class="large-strong"><%= Listing.timeRemaining.days %></strong><br>
                <span class="light-text"><%= Listing.timeRemaining.unit  %> to go.</span>
            </div>
            <% if (ListingIsCurrentUsers) { %>
                <a class="btn backer-btn" href="/Listings/<%= Listing._id%>/edit">Edit This Project</a>
                <a class="btn btn-primary new-reward" href="/Listings/<%= Listing._id%>/rewards/new">Create New Reward</a>
                <% } else { %>
                    <a class="btn backer-btn" href="#">Back This Project</a>
                    <% } %>
                        
        </div>
    </div>
</div>